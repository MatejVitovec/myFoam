FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       volScalarField;
    location    "0";
    object      T.2;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 573.15;

boundaryField
{
    //inlet
    //{
    //    type            isentropicTemperature;
    //    T0.2            uniform 298.65;
    //    p0              uniform 98071;
    //    value           uniform 298.65;
    //}

    inlet
    {
        type        codedFixedValue;
        value       uniform 573.15;
        name        mapFieldT1ToT2;
        code
        #{
            const volScalarField& sourceField = db().lookupObject<volScalarField>("T.1");
            operator== (sourceField.boundaryField()[patch().index()]);
        #};
    }

    outlet
    {
        type            zeroGradient;
    }
 
    wall
    {
        type            zeroGradient;
    }

    periodic1
    {
        type            cyclic;
    }
    
    periodic2
    {
        type            cyclic;
    }

    emptyPlanes
    {
        type            empty;
    }
}


