(
    (0  0 0)        	// 0
    (10 0 0)         	// 1
    (10 0.1 0)      	// 2
    (0  0.1 0)	    	// 3
    (0  0 0.1)	    	// 4 (extruded for 2D case)
    (10 0 0.1)	    	// 5
    (10 0.1 0.1)		// 6
    (0  0.1 0.1)		// 7
);


blocks
(
    hex (0 1 2 3 4 5 6 7) (500 1 1) simpleGrading (1 1 1)
);

